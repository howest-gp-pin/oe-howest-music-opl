{
    if (displayConfirmDelete)
    {
        <MessageBox Message="Sure you want to delete?" OnConfirm="RemoveTrack"  OnCancel="Cancel"/>
    }

    <TrackList Tracks="allTracks" OnAdd="AddTrack" OnEdit="EditTrack" OnDelete="RemoveTrackRequested"></TrackList>

