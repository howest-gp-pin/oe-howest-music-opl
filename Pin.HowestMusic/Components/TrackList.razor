@inherits ApplicationComponentBase

<div class="d-flex flex-wrap">
    @foreach(var track in Tracks)
    {
        <div class="card" style="width: 18rem; margin: 1rem;">
            <div class="card-body">
                <h5 class="card-title">@(track.IsFavorite ? "⭐" : "")@track.Name</h5>
                <p class="card-text">By @track.Artist</p>
                <p class="card-text">Duration: @track.Duration.Minute:@track.Duration.Second</p>
                <button class="btn btn-danger" @onclick="e => DisplayConfirmDelete(track)">
                    Delete
                </button>
                <button class="btn btn-warning" @onclick="e => OnEdit.InvokeAsync(track)">
                    Edit
                </button>
            </div>
        </div>

    }
</div>

<p>You displayed this component @TimesDisplayed time(s).</p>

@if (displayConfirmDelete)
{
    <dialog open>
        <p>Greetings, one and all!</p>
        <form method="dialog">
            <button @onclick="e => OnDelete.InvokeAsync(selectedTrack)">OK</button>
        </form>
    </dialog>
}

@code {
    [Parameter]
    public Track[] Tracks { get; set; }

    [Parameter]
    public EventCallback OnAdd { get; set; }

    [Parameter]
    public EventCallback<Track> OnEdit { get; set; }

    [Parameter]
    public EventCallback<Track> OnDelete { get; set; }

    private bool displayConfirmDelete;
    private Track selectedTrack;

    protected override Task OnInitializedAsync()
    {
        TimesDisplayed++;
        return base.OnInitializedAsync();
    }

    private void DisplayConfirmDelete(Track deleteTrack)
    {
        selectedTrack = deleteTrack;
        displayConfirmDelete = true;
    }

}
